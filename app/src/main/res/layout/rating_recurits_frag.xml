<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layoutid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/am_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:padding="4dp"
            android:gravity="center"
            android:text="Recruit Rating: 0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_married"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hungry?"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:layout_weight=".1"/>

            <ImageView
                android:id="@+id/hungrycheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkgray32"/>

            <ImageView
                android:id="@+id/hungrycross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/closered32"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="16dp"
            android:background="@color/white"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_haskids"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Credible?"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:layout_weight=".1"/>

            <ImageView
                android:id="@+id/crediblecheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkgray32"/>

            <ImageView
                android:id="@+id/crediblecross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/closered32"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="16dp"
            android:background="@color/white"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_aged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="People Skills?"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:layout_weight=".1"/>

            <ImageView
                android:id="@+id/skillscheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkgray32"/>

            <ImageView
                android:id="@+id/skillscross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/closered32"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="16dp"
            android:background="@color/white"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_homeowner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Competitive?"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:layout_weight=".1"/>

            <ImageView
                android:id="@+id/competitivecheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkgray32"/>

            <ImageView
                android:id="@+id/competitvecross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/closered32"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="16dp"
            android:background="@color/white"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Motivated?"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:layout_weight=".1"/>

            <ImageView
                android:id="@+id/motivatecheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkgray32"/>

            <ImageView
                android:id="@+id/motivatecross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/closered32"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="16dp"
            android:background="@color/white"></View>



    </LinearLayout>
</ScrollView>