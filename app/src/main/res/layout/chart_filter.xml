<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:fontFamily="sans-serif-medium"
                    android:padding="14dp"
                    android:button="@null"
                    android:checked="false"
                    android:layout_weight=".1"
                    android:textColor="@color/colorPrimary"
                    android:text="Team"/>

                <ImageView
                    android:id="@+id/iv_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                   />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="0dp"/>
            <LinearLayout
                android:id="@+id/lay_trainees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_trainees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:fontFamily="sans-serif-medium"
                    android:padding="14dp"
                    android:button="@null"
                    android:checked="false"
                    android:layout_weight=".1"
                    android:textColor="@color/colorPrimary"
                    android:text="Trainees"/>

                <ImageView
                    android:id="@+id/iv_trainees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="0dp"/>
            <LinearLayout
                android:id="@+id/lay_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:fontFamily="sans-serif-medium"
                    android:padding="14dp"
                    android:button="@null"
                    android:checked="false"
                    android:layout_weight=".1"
                    android:textColor="@color/colorPrimary"
                    android:text="Personal"/>

                <ImageView
                    android:id="@+id/iv_personal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>

    </LinearLayout>

</LinearLayout>