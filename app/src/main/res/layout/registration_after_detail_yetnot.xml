<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/am_background"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="3dp"
        android:background="@drawable/login_button_bgnd">
    <EditText
        android:id="@+id/et_rvpsolutionnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:hint="RVP Solution Number"
        android:textColor="@color/graylight"
        android:textStyle="bold"
        android:background="@null"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            android:layout_width="match_parent"
            android:background="@color/graylight"
            android:layout_marginBottom="2dp"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"></View>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_dontknow"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="I Don't Know"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="7dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/green"
        android:background="@drawable/login_button_bgnd"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="7dp"
        android:fontFamily="sans-serif"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:background="@drawable/register_button_bgnd"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

</LinearLayout>