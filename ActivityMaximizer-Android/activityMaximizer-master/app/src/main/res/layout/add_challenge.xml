<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_challange__set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#d3d3d3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challange Name"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:paddingLeft="15sp"
            android:fontFamily="sans-serif"
            android:textColor="#000"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Set a Title"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:paddingLeft="15sp"
            android:fontFamily="sans-serif-light"
            android:textColor="#000"
            android:id="@+id/challange_set_title"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#d3d3d3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:paddingLeft="15sp"
            android:fontFamily="sans-serif"
            android:textColor="#000"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Set a Reward"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:paddingLeft="15sp"
            android:fontFamily="sans-serif-light"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#d3d3d3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Limit"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:paddingLeft="15sp"
            android:fontFamily="sans-serif"
            android:textColor="#000"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:paddingLeft="15sp"
            android:fontFamily="sans-serif-light"
            android:textColor="#000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#d3d3d3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Included Activity Types"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:paddingLeft="15sp"
            android:fontFamily="sans-serif"
            android:textColor="#000"
            />

    </LinearLayout>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_challange_Set"
        android:dividerHeight="0.5dp">


    </ListView>



</LinearLayout>
