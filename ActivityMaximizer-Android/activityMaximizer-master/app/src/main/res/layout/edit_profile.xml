<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#fff">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:id="@+id/lay_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                >


                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#606060"
                    android:layout_centerVertical="true"
                    />


                <TextView
                    android:id="@+id/tv_firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:gravity="right"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#606060"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/textview1"
                    android:layout_alignTop="@+id/image1"
                    android:layout_toLeftOf="@+id/image1" />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/next"

                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"

                />

            <RelativeLayout
                android:id="@+id/lay_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                >


                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#606060"
                    android:layout_centerVertical="true"
                    />


                <TextView
                    android:id="@+id/tv_lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:gravity="right"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#606060"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/textview2"
                    android:layout_alignTop="@+id/image2"
                    android:layout_toLeftOf="@+id/image2" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/next"

                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"

                />

            <RelativeLayout
                android:id="@+id/lay_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="9dp"
                android:paddingTop="9dp">

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#606060"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:gravity="right"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#606060"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/textview3"
                    android:layout_alignTop="@+id/image3"
                    android:layout_toLeftOf="@+id/image3" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/next"

                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"/>

            <RelativeLayout
                android:id="@+id/lay_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                >


                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset Password"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#606060"
                    android:layout_centerVertical="true"
                    />


                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:gravity="right"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#606060"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/textview4"
                    android:layout_alignTop="@+id/image4"
                    android:layout_toLeftOf="@+id/image4" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/next"

                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"

                />



        </LinearLayout>


    </ScrollView>

</LinearLayout>
</LinearLayout>
