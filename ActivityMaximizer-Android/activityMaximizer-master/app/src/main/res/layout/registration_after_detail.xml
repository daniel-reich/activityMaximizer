<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/am_background"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_areyou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:ellipsize="end"
        android:text="Are you an RVP Solution Number"
        android:textColor="#fff"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_notyet"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Not Yet"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="7dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/green"
        android:background="@drawable/login_button_bgnd"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/tv_yes"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="7dp"
        android:fontFamily="sans-serif"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:background="@drawable/register_button_bgnd"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

</LinearLayout>